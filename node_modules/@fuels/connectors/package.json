{
  "name": "@fuels/connectors",
  "version": "0.5.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./walletconnect": {
      "require": "./dist/walletconnect-connector/index.js",
      "import": "./dist/walletconnect-connector/index.mjs",
      "types": "./dist/walletconnect-connector/src/index.d.ts"
    },
    "./evm": {
      "require": "./dist/evm-connector/index.js",
      "import": "./dist/evm-connector/index.mjs",
      "types": "./dist/evm-connector/src/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "fuels": ">=0.88.1"
  },
  "dependencies": {
    "@ethereumjs/util": "9.0.3",
    "@ethersproject/bytes": "5.7.0",
    "@wagmi/core": "2.9.1",
    "@web3modal/wagmi": "4.1.11",
    "viem": "2.10.2"
  },
  "devDependencies": {
    "fuels": "0.88.1",
    "terser": "5.31.0",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "@fuel-connectors/burner-wallet-connector": "0.5.0",
    "@fuel-connectors/evm-connector": "0.5.0",
    "@fuel-connectors/fuel-development-wallet": "0.5.0",
    "@fuel-connectors/fuel-wallet": "0.5.0",
    "@fuel-connectors/fuelet-wallet": "0.5.0",
    "@fuel-connectors/walletconnect-connector": "0.5.0"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "ts:check": "tsc --noEmit"
  }
}